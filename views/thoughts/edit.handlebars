<div class="thought-form-container">
  <a href="/thoughts/dashboard">Voltar</a>
  <h1>Editar Pensamento</h1>
  {{#with thought}}
    <form action="/thoughts/edit" method="post">
      <input type="hidden" name="id" value="{{id}}" />
      <div class="form-control">
        <label for="title">Pensamento:</label>
        <input type="text" name="title" placeholder="Digite seu pensamento" value="{{title}}" />
      </div>
      <input type="submit" value="Editar Pensamento" />
    </form>
  {{/with}}
</div>